@model RegisterViewModel

@section Styles{
    <link href="~/css/Register.css" rel="stylesheet" />
}


<body>
<div class="signup-form">
    <form asp-action="Register" method="post">
        <h5 class="card-title text-center"></h5>
        <div class="form-label-group">
            <label asp-for="@Model.Username" class="control-label"></label>
            <input asp-for="@Model.Username" class="form-control" />
            <span asp-validation-for="@Model.Username" class="text-danger"></span>

        </div>

        <div class="form-label-group">
            <label asp-for="@Model.FirstName" class="control-label"></label>
            <input asp-for="@Model.FirstName" class="form-control" />
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>

        <div class="form-label-group">
            <label asp-for="@Model.LastName" class="control-label"></label>
            <input asp-for="@Model.LastName" class="form-control" />
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>

        <div class="form-label-group">
            <label asp-for="@Model.Email" class="control-label"></label>
            <input asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>

        <div class="form-label-group">
            <label asp-for="@Model.PhoneNumber" class="control-label"></label>
            <input type="tel" asp-for="@Model.PhoneNumber" class="form-control" />
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>
        <hr>
        <div class="form-group">
            <label asp-for="@Model.Password" class="control-label"></label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.RepeatedPassword" class="control-label">Confirm password</label>
            <input type="password" asp-for="@Model.RepeatedPassword" class="form-control" />
            <span asp-validation-for="@Model.RepeatedPassword" class="text-danger"></span>
        </div>

        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Register</button>
        <a class="d-block text-center mt-2 small" href="/Security/Account/Login">Sign In</a>

    </form>


</div>
    </body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
