@using eshop.Areas.Admin.Controllers;
@model Product


@{ if (String.IsNullOrWhiteSpace(ViewBag.Action) == false)
    {
        <div class="row">
            <form asp-action="@ViewBag.Action" enctype="multipart/form-data" method="post">
                <div class="form-group col-sm-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @{ if (ViewBag.Action == nameof(ProductsController.Edit))
                        {
                            <input type="hidden" asp-for="@Model.ID" class="form-control">
                        }
                    }

                    <div class="form-group">
                        <label asp-for="@Model.Nazev"></label>
                        <input asp-for="@Model.Nazev" class="form-control" placeholder="Enter Name">
                        <span asp-validation-for="@Model.Nazev" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Price"></label>
                        <input asp-for="@Model.Price" class="form-control" placeholder="Enter Price">
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Category"></label>
                        <input asp-for="@Model.Category" class="form-control" placeholder="Enter Price">
                        <span asp-validation-for="@Model.Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Image"></label>
                        <input id="fileupload" asp-for="@Model.Image" class="form-inline" accept="image/*">
                        <span asp-validation-for="@Model.Image" class="text-danger"></span>
                        <input type="hidden" value="/" asp-for="@Model.ImageSrc" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ImageAlt"></label>
                        <input asp-for="@Model.ImageAlt" class="form-control" placeholder="Enter ImageAlt">
                        <span asp-validation-for="@Model.ImageAlt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailProduktu"></label>
                        <textarea asp-for="@Model.DetailProduktu" class="form-control" placeholder="Enter DetailProduktu"></textarea>
                        <span asp-validation-for="@Model.DetailProduktu" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    }
    else
    {
        <h2>Form action is not sent</h2>
    }
}