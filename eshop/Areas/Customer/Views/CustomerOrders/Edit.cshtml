@model Order
@{ if (Model != null)
    {
        <div class="row">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <div class="form-group col-sm-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>
                    <input type="hidden" asp-for="@Model.ID" class="form-control">

                    <div class="form-group">
                        <label asp-for="@Model.OrderNumber"></label>
                        <input asp-for="@Model.OrderNumber" class="form-control" placeholder="Enter DataTarget">
                        <span asp-validation-for="@Model.OrderNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TotalPrice"></label>
                        <input id="fileupload" asp-for="@Model.TotalPrice" class="form-inline" accept="image/*">
                        <span asp-validation-for="@Model.TotalPrice" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DateTimeCreated"></label>
                        <input asp-for="@Model.DateTimeCreated" class="form-control" placeholder="Enter ImageAlt">
                        <span asp-validation-for="@Model.DateTimeCreated" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.User.UserName"></label>
                        <textarea asp-for="@Model.User.UserName" class="form-control" placeholder="Enter CarouselContent"></textarea>
                        <span asp-validation-for="@Model.User.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Paid"></label>
                        <textarea asp-for="@Model.Paid" class="form-control" placeholder="Enter CarouselContent"></textarea>
                        <span asp-validation-for="@Model.Paid" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        }
    }